# Wati ChatBot Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini API Configuration (for audio processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Wati API Configuration
WATI_API_KEY=your_wati_api_key_here
WATI_API_URL=https://live-mt-server.wati.io/YOUR_ACCOUNT_ID/api/v1
WATI_WEBHOOK_VERIFY_TOKEN=your_webhook_verification_token

# Database Configuration (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///database/data/chatbot.sqlite

# Server Configuration
HOST=0.0.0.0
PORT=8000

# User Access Control Configuration
# Set RESTRICTED_MODE=true to limit bot access to specific phone numbers
# If RESTRICTED_MODE=false (default), all users can interact with the bot
RESTRICTED_MODE=false

# Comma-separated list of allowed phone numbers (only used when RESTRICTED_MODE=true)
# Format: phone numbers without spaces or special characters
# Example: ALLOWED_NUMBERS=201142765209,966138686475,966505281144
ALLOWED_NUMBERS=

# Logging Configuration
LOG_LEVEL=INFO

# Optional: External API Configuration
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your_external_api_key_here

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0 